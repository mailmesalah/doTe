<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >
 
    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/image_bg"
        android:layout_marginRight="5dip"
        android:layout_marginEnd="5dip">
 
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/logo"/>
 
    </LinearLayout>
 
    <!-- Profile Name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_profile_image"
        android:layout_toRightOf="@+id/thumbnail_profile_image"
        android:layout_toEndOf="@+id/thumbnail_profile_image"
        android:text="Rihanna Love the way lie"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"/>
 
    <!-- Last Chat -->
    <TextView
        android:id="@+id/last_chat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:textColor="#343434"
        android:textSize="12sp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail_profile_image"
        android:layout_toEndOf="@+id/thumbnail_profile_image"
        android:text="Just gona stand there and ..." />
 
    <!-- Last Location -->
    <TextView
        android:id="@+id/last_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/profile_name"
        android:gravity="end"
        android:text="5:45"
        android:layout_marginRight="5dip"
        android:layout_marginEnd="5dip"
        android:textSize="12sp"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>
 
</RelativeLayout>
